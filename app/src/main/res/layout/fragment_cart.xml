<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/GoodsFragment"
        layout="@layout/fragment_goods"/>

    <RelativeLayout
        android:id="@+id/rlClearing"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id="@+id/btnClearing"
            android:layout_alignParentRight="true"
            android:background="#def52b2b"
            android:layout_width="140dp"
            android:text="结算"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_height="match_parent" />
        <TextView
            android:paddingTop="6dp"
            android:id="@+id/tvTotal"
            android:textColor="#ffa500"
            android:text="1000.0"
            android:textSize="23dp"
            android:layout_toLeftOf="@id/btnClearing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="6dp"
            android:id="@+id/tvSave"
            android:textColor="#f9ff0d00"
            android:text="1000.0"
            android:textSize="23dp"
            android:layout_below="@id/tvTotal"
            android:layout_toLeftOf="@id/btnClearing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv1"
            android:paddingTop="6dp"
            android:layout_toLeftOf="@id/tvTotal"
            android:textColor="#ffa500"
            android:text="合计:￥"
            android:textSize="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/tv1"
            android:paddingTop="6dp"
            android:layout_toLeftOf="@id/tvSave"
            android:textColor="#f9ff0d00"
            android:text="节省:￥"
            android:textSize="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
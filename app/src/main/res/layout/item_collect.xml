<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/CollectLinearLayout"
    android:orientation="horizontal"
    android:paddingRight="1dp"
    android:paddingLeft="1dp">

    <TextView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#678"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/ivRemoveCart"
            android:visibility="gone"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/del_cart"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/ivGoodsThumb"
            android:layout_gravity="center"
            android:src="@drawable/nopic"
            />
        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="#eee"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sdfjasdfadsfasdfasdfadsfadsf"
            android:layout_below="@id/ivGoodsThumb"
            android:layout_gravity="center"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#678"/>

    </RelativeLayout>
    <TextView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#678"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_title"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户头像"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/iv"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_arrow_icon"/>
        <cn.ucai.fulicenter.ui.utils.view.CircleImageView
            android:id="@+id/ivUserAvatars"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_account"
            android:layout_toLeftOf="@id/iv"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户名"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/iv1"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_arrow_icon"/>
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="sadfasdfasdf"
            android:layout_toLeftOf="@id/iv1"
            android:gravity="center"
            android:src="@drawable/icon_account"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutUpdateNick"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户昵称"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/iv2"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_arrow_icon"/>
        <TextView
            android:id="@+id/tvUserNick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="adsfadsf"
            android:gravity="center"
            android:layout_toLeftOf="@id/iv2"/>
    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="200dp" />

<Button
    android:id="@+id/btnBank"
    android:background="#aafa1111"
    android:layout_gravity="center_horizontal"
    android:layout_width="300dp"
    android:text="退出登陆"
    android:layout_height="wrap_content" />
</LinearLayout>